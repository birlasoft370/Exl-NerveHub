@using Kendo.Mvc.UI;
@model MicUI.WorkManagement.Models.ViewModels.TerminationCodeViewModel

@{
    ViewBag.Title = @BPA.GlobalResources.UI.Resources.WorkManagement + "|" + @BPA.GlobalResources.UI.WorkManagement.Resources_TerminationCode.dispaly_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/bpa/scripts/jquery.alerts.js"></script>
<script src="~/lib/bpa/scripts/terminationcode-1.8.2.js"></script>
@using (Html.BeginForm("Index", "TerminationCode"))
{
    @Html.HiddenFor(a => a.mTerminationCodeID)
    @Html.AntiForgeryToken()
    <div class="formWrap">
        <div class="formWrap-head">
            <div class="row">
                <div class="col-6">
                    <h2>
                        @{
                            var text = Model.mTerminationCodeID == 0 ? @BPA.GlobalResources.UI.WorkManagement.Resources_TerminationCode.dispCreateNewTermCode : @BPA.GlobalResources.UI.WorkManagement.Resources_TerminationCode.dispModifyTermCode;
                        }@text
                    </h2>
                </div>
                <div class="col-6">
                    <div class="text-end">
                        @(Html.Kendo().Button().Name("btnNewTerminationCode").Icon("refresh").Events(ev => ev.Click("OnTerminationCodeClickNew")).HtmlAttributes(new { type = "button", @class = "btn-outline-primary btn-sm btn mx-2 ms-0" }).Content(@BPA.GlobalResources.UI.Resources_common.display_BtnReset))
                        @(Html.Kendo().Button().Name("btnSaveTerminationCode").Icon("plus").HtmlAttributes(new { type = "submit", @class = "btn-primary btn-sm btn mx-2 ms-0" }).Content(@BPA.GlobalResources.UI.Resources_common.display_BtnSave))
                        @(Html.Kendo().Button().Icon("search").Name("btnTerminationCodeView").Events(ev => ev.Click("OnTerminationCodeViewClick")).HtmlAttributes(new { type = "button", @class = "btn-primary btn-sm btn" }).Content(@BPA.GlobalResources.UI.Resources_common.display_BtnSearch))
                    </div>
                </div>
            </div>
        </div>
        <div class="formWrap-body">
            <div class="row">
                <div class="col-sm-4 col-xl-3">
                    <div class="mb-3">
                        @Html.LabelFor(a => a.mTerminationCodeName, new { @class = "form-label label-required" })
                        @(Html.Kendo().TextBoxFor(a => a.mTerminationCodeName).HtmlAttributes(new { @class = "form-control" }))
                    </div>
                </div>
                <div class="col-sm-4 col-xl-3">
                    <div class="mb-3">
                        @Html.LabelFor(a => a.mDescription, new { @class = "form-label label-required" })
                        @(Html.Kendo().TextBoxFor(a => a.mDescription).HtmlAttributes(new { @class = "form-control" }))
                    </div>
                </div>

                <div class="col-sm-4 col-xl-3">
                    <div class="mb-3 pt-3">
                        <div class="pt-4">
                            <div class="custom-input">
                                @(Html.Kendo().CheckBoxFor(a => a.mIsdisable).Checked(Model.mIsdisable))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@{
    if (ViewData["Message"] != null)
    {
        <script language="javascript">
            jAlert('@ViewData["Message"]');
        </script>
    }
}

<script>

    var Resources = {
        url_ShowTerminationCode: ResourceLayout.partialURL + 'ShowTerminationCode',
        url_Index: ResourceLayout.partialURL + 'Index',
        url_SetTerminationCodeID: ResourceLayout.partialURL + 'SetTerminationCodeID',
        url_DeleteTerminationCode: ResourceLayout.partialURL + 'DeleteTerminationCode',
        url_ShowTerminationCode: ResourceLayout.partialURL + 'ShowTerminationCode',
    }

</script>