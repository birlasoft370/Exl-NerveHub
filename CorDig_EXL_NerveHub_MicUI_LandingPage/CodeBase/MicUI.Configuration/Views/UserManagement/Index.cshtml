    // @Html.Partial("_ValidationSummary", ViewData.ModelState);
    @Html.AntiForgeryToken()


    <div class="formWrap">
        <div class="formWrap-head">
            <div class="row">
                <div class="col-6">
                    <h2>
                        @{
                            var text = @BPA.GlobalResources.UI.AppConfiguration.Resources_UserManagement.display_PageHeader;
                        }@text
                    </h2>
                </div>
                <div class="col-6">
                    <div class="text-end">
