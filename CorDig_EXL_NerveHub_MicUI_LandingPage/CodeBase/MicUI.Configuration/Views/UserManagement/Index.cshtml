@{
    if (ViewData["Message"] != null)
    {
        <script language="javascript">

            var msgval = '@ViewData["Message"]';
            var ConfMsg = msgval.split(',')[msgval.split(',').length - 1];
            if (ConfMsg == "OK") {
                jAlert(msgval.split(',')[0]);
                window.location.href = ResourceLayout.partialURL + "Index";
            }
            else {
                jAlert(msgval.split(',')[0]);
            }
        </script>
    }
}
