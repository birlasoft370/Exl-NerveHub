                                    @Html.LabelFor(m => m.sEmail, new { @class = "form-label label-required" })
                                    @Html.Kendo().TextBoxFor(model => model.sEmail).HtmlAttributes(new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-sm-4 col-xl-3">
